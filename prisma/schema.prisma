generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AggregatorTool {
  id                     String                @id @default(uuid())
  releaseDate            DateTime?
  version                String?
  searchVector           String?
  slugId                 Int?
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  title                  String
  metaDescription        String?
  productName            String
  tagline                String?
  featuredImage          String?
  productLogo            String?
  productUrl             String?
  shortDescription       String?
  fullDescription        String?
  howItWorks             String?
  category               String?
  positiveUserSentiments String[]
  negativeUserSentiments String[]
  demoVideos             String[]
  screenshots            String[]
  ctaText                String?
  ctaUrl                 String?
  ctaAnchorText          String?
  supportEmail           String?
  phoneNumber            String?
  rating                 Float?
  featured               Boolean?
  verified               Boolean?
  pros                   String[]
  cons                   String[]
  paymentOptions         String[]
  tags                   String[]
  platformsAvailability  String?
  privacyAndSecurity     String?
  restrictions           String?
  featuresAndBenefits    FeaturesAndBenefits[]
  uniqueSellingPoints    UniqueSellingPoints[]
  aiCapabilities         AICapabilities[]
  targetAudiences        TargetAudience[]
  pricing                Pricing?
  userReviews            UserReview[]
  faq                    FAQ[]
  relatedLinks           RelatedLink[]
}

model FeaturesAndBenefits {
  id               String         @id @default(uuid())
  title            String
  description      String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model UniqueSellingPoints {
  id               String         @id @default(uuid())
  title            String
  description      String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model AICapabilities {
  id               String         @id @default(uuid())
  keyword          String
  title            String
  description      String
  url              String
  source           String
  createdAt        DateTime       @default(now())
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model TargetAudience {
  id               String         @id @default(uuid())
  name             String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model Pricing {
  id               String         @id @default(uuid())
  model            String?
  freeTier         String?
  freeTrial        String?
  premiumPlans     PremiumPlan[]
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String         @unique
}

model PremiumPlan {
  id        String  @id @default(uuid())
  name      String
  price     Float
  features  String
  pricing   Pricing @relation(fields: [pricingId], references: [id])
  pricingId String
}

model UserReview {
  id               String         @id @default(uuid())
  rating           Int
  comment          String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model FAQ {
  id               String         @id @default(uuid())
  question         String
  answer           String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}

model RelatedLink {
  id               String         @id @default(uuid())
  url              String
  description      String
  aggregatorTool   AggregatorTool @relation(fields: [aggregatorToolId], references: [id])
  aggregatorToolId String
}